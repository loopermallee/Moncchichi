<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.loopermallee.moncchichi.core.ui.components.StatusBarView
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/text_device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Device: â€”"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_device_rssi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RSSI: â€”" />

            <TextView
                android:id="@+id/text_device_battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Battery: â€”" />

            <TextView
                android:id="@+id/text_device_firmware"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Firmware: â€”" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_pair"
            android:text="Scan &amp; Pair"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_disconnect"
            android:text="Disconnect"
            android:enabled="false"
            android:layout_marginStart="12dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_ping"
        android:text="Send Test PING"
        android:enabled="false"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_console_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Device Console"
        android:textStyle="bold"
        android:textSize="18sp" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_logs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/text_logs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(no logs yet)"
            android:typeface="monospace" />
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_copy_logs"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="ðŸ“‹ Copy" />

</LinearLayout>
