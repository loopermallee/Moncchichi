<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/er_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/assistant_spacing">

        <com.loopermallee.moncchichi.core.ui.components.StatusBarView
            android:id="@+id/status_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/assistant_spacing"
            android:text="Assistant Configuration"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:textColor="@color/er_text_primary" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_api_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/assistant_spacing"
            android:hint="OpenAI API Key (sk-proj-…)"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"
            app:boxStrokeColor="@color/er_border"
            app:boxStrokeWidth="2dp"
            app:helperTextEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_api_key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Paste your OpenAI API key"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColorHint="@color/er_text_primary"
                android:textColor="@color/er_text_primary" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="end"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_edit_key"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Key"
                android:textColor="@color/er_text_primary" />
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/assistant_spacing"
            app:cardBackgroundColor="@color/er_surface"
            app:cardCornerRadius="12dp"
            app:strokeColor="@color/er_border"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/assistant_spacing">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Model"
                    android:textColor="@color/er_text_primary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/text_model_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="GPT-4o-mini"
                    android:textColor="@color/er_text_primary"
                    android:textSize="16sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/text_temperature_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/assistant_spacing"
            android:gravity="center"
            android:text="Temperature: 0.5"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textColor="@color/er_text_primary" />

        <com.google.android.material.slider.Slider
            android:id="@+id/temperatureSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:value="0.5"
            android:valueFrom="0.0"
            android:valueTo="1.0"
            app:labelBehavior="gone"
            app:thumbTint="@color/er_border"
            app:trackColorActive="@color/er_border"
            app:trackColorInactive="@color/gray_disabled" />

        <TextView
            android:id="@+id/text_temperature_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="Lower = precise • Higher = creative"
            android:textColor="@color/er_text_primary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/assistant_spacing"
            android:backgroundTint="@color/er_border"
            android:text="Save API Settings"
            android:textColor="@color/er_text_primary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_reset"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Reset to defaults"
            android:textColor="@color/er_text_primary" />

        <TextView
            android:id="@+id/text_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/assistant_spacing"
            android:text="Online mode – up to 10 offline prompts are remembered"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:textColor="@color/er_text_primary" />

    </LinearLayout>
</ScrollView>
