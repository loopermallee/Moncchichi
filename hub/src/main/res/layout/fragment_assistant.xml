<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/er_background"
    android:orientation="vertical"
    android:padding="@dimen/assistant_spacing">

    <com.loopermallee.moncchichi.core.ui.components.StatusBarView
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_offline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/assistant_spacing"
        android:visibility="gone"
        app:cardBackgroundColor="@color/er_surface_alt"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:strokeColor="@color/er_border"
        app:strokeWidth="1dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="You’re in Offline Mode. Only offline functions (device state, cached replies) are available."
            android:textColor="@color/er_text_primary" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/er_surface_alt"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:strokeColor="@color/er_border"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/text_error_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assistant error"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textColor="@color/er_text_primary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_error_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text=""
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:textColor="@color/er_text_secondary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_error_action"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Action"
                android:textColor="@color/er_text_primary"
                android:visibility="gone" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <ScrollView
        android:id="@+id/scroll_conversation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:paddingTop="@dimen/assistant_spacing">

        <LinearLayout
            android:id="@+id/container_messages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/container_thinking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="start"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_thinking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/assistant_spacing"
        app:boxBackgroundColor="@color/er_surface_alt"
        app:boxBackgroundMode="filled"
        app:boxStrokeColor="@color/er_border"
        app:endIconMode="clear_text"
        app:endIconTint="@color/er_text_secondary"
        app:hintTextColor="@color/er_text_secondary">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ask or command…"
            android:textColor="@color/er_text_primary"
            android:textColorHint="@color/er_text_secondary" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/text_typing_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="User is typing…"
        android:textColor="@color/er_text_secondary"
        android:textSize="12sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:textColor="@color/er_text_primary"
            app:backgroundTint="@color/er_surface_alt"
            app:strokeColor="@color/er_border"
            app:strokeWidth="1dp" />
    </LinearLayout>

</LinearLayout>
