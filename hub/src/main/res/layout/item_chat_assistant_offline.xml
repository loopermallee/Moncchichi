<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:orientation="horizontal"
    android:paddingStart="@dimen/assistant_spacing"
    android:paddingEnd="@dimen/assistant_spacing">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_avatar_assistant_offline"
        android:contentDescription="@string/chat_avatar_offline"
        android:padding="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_avatar_person"
        app:tint="@android:color/white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:gravity="start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="@string/chat_label_offline"
            android:textAllCaps="false"
            android:textColor="@color/er_text_secondary"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_bubble_assistant_offline"
            android:fontFamily="sans-serif"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp"
            android:textColor="@color/er_text_primary"
            android:textSize="15sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/text_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/er_text_secondary"
            android:textSize="10sp"
            tools:text="12:34 PM" />
    </LinearLayout>
</LinearLayout>
